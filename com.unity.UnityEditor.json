{
    "id": "com.unity.UnityEditor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.28",
    "sdk": "org.gnome.Sdk",
    "command": "unity-editor",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--share=network",
        "--socket=pulseaudio",
        "--filesystem=host"
    ],
    "modules": [
        "shared-modules/glu/glu-9.0.0.json",
        {
            "name": "gconf",
            "cleanup": [
              "/bin",
              "/libexec",
              "/share/sgml",
              "/etc/xdg/autostart",
              "/share/dbus-1"
            ],
            "config-opts": [
                "--disable-static",
                "--disable-gtk-doc",
                "--disable-orbit",
                "--disable-introspection"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/GConf/3.2/GConf-3.2.6.tar.xz",
                    "sha256": "1912b91803ab09a5eed34d364bf09fe3a2a9c96751fde03a4e0cfa51a04d784c"
                }
            ]
        },
        {
            "name": "unity-editor",
            "buildsystem": "simple",
            "build-commands": [
                "install -D apply_extra /app/bin/apply_extra",
                "install -Dm755 -t /app/bin unity-editor",
                "install -Dm644  com.unity.UnityEditor-64.png /app/share/icons/hicolor/64x64/apps/com.unity.UnityEditor.png",
                "install -Dm644  com.unity.UnityEditor-128.png /app/share/icons/hicolor/128x128/apps/com.unity.UnityEditor.png",
                "install -Dm644  com.unity.UnityEditor-256.png /app/share/icons/hicolor/256x256/apps/com.unity.UnityEditor.png",
                "install -Dm644 -t /app/share/appdata/ com.unity.UnityEditor.appdata.xml",
                "install -Dm644 -t /app/share/applications com.unity.UnityEditor.desktop"
            ],
            "sources": [
                {
                    "type": "extra-data",
                    "filename": "Unity.tar.xz",
                    "sha256": "d6933f205e27e05046e6b13b3b7bccaebfdc4dda8ae1131971e678ff6c42277a",
                    "url": "https://beta.unity3d.com/download/7b8938f7fa83/LinuxEditorInstaller/Unity.tar.xz",
                    "size": 764734008
                },
                {
                    "type": "file",
                    "path": "com.unity.UnityEditor.desktop"
                },
                {
                    "type": "file",
                    "path": "com.unity.UnityEditor.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "com.unity.UnityEditor-64.png"
                },
                {
                    "type": "file",
                    "path": "com.unity.UnityEditor-128.png"
                },
                {
                    "type": "file",
                    "path": "com.unity.UnityEditor-256.png"
                },
                {
                    "type": "script",
                    "commands": [
                        "tar xf Unity.tar.xz",
                        "rm -f Unity.tar.xz",
                        "mkdir -p share/Unity",
                        "mv Editor share/Unity"
                    ],
                    "dest-filename": "apply_extra"
                },
                {
                    "type": "script",
                    "commands": [
                        "exec /app/extra/share/Unity/Editor/Unity -no-throttle-updates \"$@\""
                    ],
                    "dest-filename": "unity-editor"
                }
            ]
        }
    ]
}
