{
    "id": "com.unity.UnityEditor",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "command": "unity-editor",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=x11",
        "--share=network",
        "--socket=pulseaudio",
        "--filesystem=host"
    ],
    "modules": [
        "shared-modules/glu/glu-9.0.0.json",
        {
            "name": "gconf",
            "cleanup": [
              "/bin",
              "/libexec",
              "/share/sgml",
              "/etc/xdg/autostart",
              "/share/dbus-1"
            ],
            "config-opts": [
                "--disable-static",
                "--disable-gtk-doc",
                "--disable-orbit",
                "--disable-introspection"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/GConf/3.2/GConf-3.2.6.tar.xz",
                    "sha256": "1912b91803ab09a5eed34d364bf09fe3a2a9c96751fde03a4e0cfa51a04d784c"
                }
            ]
        },
        {
            "name": "unity-editor",
            "buildsystem": "simple",
            "build-commands": [
                "install -D apply_extra /app/bin/apply_extra",
                "install -Dm755 -t /app/bin unity-editor",
                "install -Dm644 -t /app/share/applications com.unity.UnityEditor.desktop"
            ],
            "sources": [
                {
                    "type": "extra-data",
                    "filename": "Unity.tar.xz",
                    "md5": "4bed39032da87da524105aef1a03ba54",
                    "sha256": "39602b42e21435db0b1772a536f5936ab9fc1683abf588146f3de3834c87afa7",
                    "url": "https://beta.unity3d.com/download/aea5ecb8f9fd+/LinuxEditorInstaller/Unity.tar.xz",
                    "size": 670365104,
                    "installed-size": 2810787840
                },
                {
                    "type": "file",
                    "path": "com.unity.UnityEditor.desktop"
                },
                {
                    "type": "script",
                    "commands": [
                        "tar xf Unity.tar.xz",
                        "rm -f Unity.tar.xz",
                        "mkdir -p share/Unity",
                        "mv Editor share/Unity",
                        "mkdir -p export/share/icons/hicolor/256x256/apps",
                        "cp share/Unity/Editor/Data/Resources/LargeUnityIcon.png export/share/icons/hicolor/256x256/apps/com.unity.UnityEditor.png"
                    ],
                    "dest-filename": "apply_extra"
                },
                {
                    "type": "script",
                    "commands": [
                        "exec /app/extra/share/Unity/Editor/Unity -no-throttle-updates \"$@\""
                    ],
                    "dest-filename": "unity-editor"
                }
            ]
        }
    ]
}
